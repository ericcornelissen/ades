! exec ades -json .
cmp stdout stdout-repository.txt
! stderr .

! exec ades -json .github/workflows/safe.yml .github/workflows/unsafe.yml
cmp stdout stdout-files.txt
! stderr .


-- .github/workflows/safe.yml --
name: Example unsafe workflow
on: [push]

jobs:
  example:
    name: Example unsafe job
    runs-on: ubuntu-latest
    steps:
    - name: Checkout repository
      uses: actions/checkout@v3
    - name: Unsafe run
      env:
        NAME: ${{ inputs.name }}
      run: echo "Hello $NAME"
-- .github/workflows/unsafe.yml --
name: Example unsafe workflow
on: [push]

jobs:
  example:
    name: Example unsafe job
    runs-on: ubuntu-latest
    steps:
    - name: Checkout repository
      uses: actions/checkout@v3
    - name: Unsafe run
      run: echo 'Hello ${{ inputs.name }}'
