{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["ci/cd"],
      "schedule": "* 0-4 * * *",
      "prConcurrentLimit": 1
    },
    {
      "matchManagers": ["gomod"],
      "postUpdateOptions": ["gomodTidy"],
      "schedule": "* 0-4 * * *",
      "prConcurrentLimit": 1
    }
  ]
}
